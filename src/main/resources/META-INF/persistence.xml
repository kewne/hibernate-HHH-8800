<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="io.github.kewne.hibernate_test">

       <properties>
           <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/backend"/>
           <property name="javax.persistence.jdbc.user" value="backend-app"/>
           <property name="javax.persistence.jdbc.password" value="zezam"/>
           <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
           <property name="hibernate.show_sql" value="true" />
           <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
           <property name="hibernate.id.new_generator_mappings" value="true"/>
           <property name="hibernate.connection.provider_disables_autocommit" value="true"/>
       </properties>

    </persistence-unit>
</persistence>
